<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/discount_height"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/discount_ic"
            android:layout_width="@dimen/items_all_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/items_all_margin"
            app:srcCompat="@drawable/ic_discount_details" />

        <TextView
            android:id="@+id/discount_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/discount_ic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/primary_text_size"
            android:layout_toRightOf="@+id/discount_ic" />

        <TextView
            android:id="@+id/discount_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/items_all_margin"
            android:maxLines="1"
            android:text="100%"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/primary_text_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
