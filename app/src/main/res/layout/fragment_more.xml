<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.eboltify.sales.ui.main.more.MoreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/more_items"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/more_item_content_padding">

                <ImageView
                    android:id="@+id/more_items_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/more_item_content_margin"
                    app:srcCompat="@drawable/ic_items" />

                <TextView
                    android:id="@+id/more_items_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/more_items_ic"
                    android:layout_toRightOf="@+id/more_items_ic"
                    android:text="@string/more_items"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/primary_text_size" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_line_height"
                android:layout_marginStart="@dimen/more_line_margin_start"
                android:background="@color/md_grey_500"
                android:layout_marginLeft="@dimen/more_line_margin_start" />
            <RelativeLayout
                android:id="@+id/customer_care"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height"
                android:foreground="?selectableItemBackground"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/more_item_content_padding">
                <ImageView
                    android:id="@+id/customer_care_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/more_item_content_margin"
                    app:srcCompat="@drawable/ic_customer_care" />
                <TextView
                    android:id="@+id/customer_care_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/customer_care_ic"
                    android:layout_toRightOf="@+id/customer_care_ic"
                    android:text="@string/more_customer_care"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/primary_text_size" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_line_height"
                android:layout_marginStart="@dimen/more_line_margin_start"
                android:background="@color/md_grey_500"
                android:layout_marginLeft="@dimen/more_line_margin_start" />
            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height"
                android:foreground="?selectableItemBackground"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/more_item_content_padding">
                <ImageView
                    android:id="@+id/settings_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/more_item_content_margin"
                    app:srcCompat="@drawable/ic_settings" />
                <TextView
                    android:id="@+id/settings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/settings_ic"
                    android:layout_toRightOf="@+id/settings_ic"
                    android:text="@string/more_settings"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/primary_text_size" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_line_height"
                android:layout_marginStart="@dimen/more_line_margin_start"
                android:background="@color/md_grey_500"
                android:layout_marginLeft="@dimen/more_line_margin_start" />
            <RelativeLayout
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height"
                android:foreground="?selectableItemBackground"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/more_item_content_padding">
                <ImageView
                    android:id="@+id/sign_out_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/more_item_content_margin"
                    app:srcCompat="@drawable/ic_sign_out" />
                <TextView
                    android:id="@+id/sign_out_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/sign_out_ic"
                    android:layout_toRightOf="@+id/sign_out_ic"
                    android:text="@string/more_sign_out"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/primary_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
