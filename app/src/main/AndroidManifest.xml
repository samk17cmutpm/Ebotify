<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eboltify.sales">

    <application
        android:name=".EboltifyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.handle_error.HandleErrorActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.items_management.ItemsManagementActivity" />
        <activity android:name=".ui.items_all.ItemsAllActivity" />
        <activity android:name=".ui.items_create.ItemsCreateActivity"></activity>
    </application>

</manifest>